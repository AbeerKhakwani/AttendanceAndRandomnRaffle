<html>
  <title>DOE DASHBOARD</title>
  <link rel="stylesheet" href="/../normalize.css">
  <link rel="stylesheet" href="/../skeleton.css">
  <link rel="stylesheet" href="/../styles.css">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,300" rel="stylesheet" type="text/css">
  <script src="jquery-1.12.0.js"></script>
  <script src="scripts.js"></script>
  <body>
    <div class="left-sidebar">
      <p>yo!</p>
      <hr>
    </div>
    <div class="top-sidebar"></div>
    <div class="well well-sm" style="text-align:center">
      <h1>Create new user!</h2>

      {% if user_id is not empty %}
          <p>Someone is already logged in.</p>
      {% else %}
      {% if exists == 1 %}
          <p>This username already exists</p>
      {% endif %}
      <form action="/create_user" method="post">
          <div class="form-group">
              <label for="name">Username</label>
              <input placeholder="enter username" type="text" name="username" required>
          </div>
          <div class="form-group">
              <label for="password">Password</label>
              <input placeholder= "new password" type="password" name="password" required>
          </div>
          <button type="submit" class="btn btn-success">CREATE!!</button>
      </form>
      {% endif %}
    </div>
      <footer id="footer" class="navbar navbar-fixed-bottom">
          <div class="well well-sm" style="text-align:center">
               <!-- home -->
               <form class="btn-group inline" action="/" method="get">
                   <button class="btn btn-default btn-md">
                       <span class="glyphicon glyphicon-home"></span> Home
                   </button>
               </form>
           </div>
       </footer>
  </body>
</html>
